@model IEnumerable<SchoolManagement.Models.GiaoVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a  asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenGiaoVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioiTinh)
            </th>
            <th>
                Mã bộ môn
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenGiaoVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.MaBoMonNavigation.MaBoMon) -  @Html.DisplayFor(modelItem => item.MaBoMonNavigation.TenBoMon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaGiaoVien">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaGiaoVien">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaGiaoVien">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
